<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Tuliskan Komentar anda di sini..." />

        <EditText
            android:id="@+id/text_komentar"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_weight="1.71"
            android:background="@drawable/roundrectone"
            android:ems="10"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:padding="10dp"

            android:scrollHorizontally="false"
            android:textColor="#707b7c"
            android:textSize="15dp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btnkirimkomentar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/roundrect"
            android:padding="10dp"
            android:text="Kirim Pesan"
            android:layout_gravity="right"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_repeat"
    tools:context="net.simplifiedcoding.userregistrationapp.ActivityLogin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundrectone"
        
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_nama_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In pengguna"
            android:gravity="center"
            android:layout_margin="2dp"
            android:padding="15dp"
            android:background="@drawable/roundrect"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Username :" />

        <EditText
            android:id="@+id/etusername"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundrectone"
            android:ems="10"
            android:padding="8dp"
            android:paddingLeft="5dp" >

            <requestFocus />
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/textview_password" />

        <EditText
            android:id="@+id/etpassword"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundrectone"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonUserLogin"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundrect"
                android:text="@string/string_user_login"
                android:textColor="#2a2a2a"
                android:textSize="16dp" />

            <Button
                android:id="@+id/buttonLupaPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:text="@string/string_lupapass"
                android:textColor="#ffffff"
                android:textSize="16dp" 
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
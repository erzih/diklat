<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_nama_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff9800"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:text="DIKLAT JURU SITA"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f57c00"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:text="welcome"
                android:textColor="#ffffff" />

            <View
                android:id="@+id/div2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#476b6b" />
        </LinearLayout>

        <Gallery
            android:id="@+id/gallery"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="2dp" />

        <LinearLayout
            android:id="@+id/image_count"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f8f9f9"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="match_parent"
                android:layout_height="76dp" >

                <Button
                    android:id="@+id/btn_panitia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:drawableTop="@drawable/panitia"
                    android:padding="10dp"
                    android:textColor="#707b7c" >
                </Button>

                <Button
                    android:id="@+id/btn_materi"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/btn_register"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:drawableTop="@drawable/documents"
                    android:padding="10dp"
                    android:textColor="#707b7c" >
                </Button>

                <Button
                    android:id="@+id/btn_pengajar"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:drawableTop="@drawable/pengajar"
                    android:paddingTop="10dp"
                    android:textColor="#707b7c" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_message_error"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="AKUN SAYA"
                    android:textColor="#212121"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/text_nip"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="MATERI"
                    android:textColor="#212121"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/txt_nama_pikt_satu"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="PENGAJAR"
                    android:textColor="#212121"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginTop="5dp" >

                <Button
                    android:id="@+id/btn_petugas"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:drawableTop="@drawable/piket"
                    android:padding="10dp"
                    android:textColor="#707b7c"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/btn_komentar"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:drawableTop="@drawable/comments"
                    android:paddingTop="15dp"
                    android:textColor="#707b7c"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/btn_about"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:drawableTop="@drawable/abouts"
                    android:paddingTop="15dp"
                    android:textColor="#707b7c"
                    android:textSize="12dp" >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="PENYELENGGARA"
                    android:textColor="#212121"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="KOMENTAR"
                    android:textColor="#212121"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/text_instansi"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="ABOUT"
                    android:textColor="#212121"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/imgae_pkt_satu"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="#212121"
                android:src="@drawable/abouts" />

            <TextView
                android:id="@+id/txt_nama_pikt_satu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/imgae_pkt_satu"
                android:textSize="18dp"
                android:text="Nama" />

            <View
                android:id="@+id/div1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt_nama_pikt_satu"
                android:layout_toLeftOf="@+id/btn_cal_satu"
                android:layout_toRightOf="@+id/imgae_pkt_satu"
                android:background="#b6b6b6" />

            <TextView
                android:id="@+id/txt_no_pkt_satu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/div1"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imgae_pkt_satu"
                android:text="No Telepon"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/btn_cal_satu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_no_pkt_satu"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonwarnahijau"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:text="Call" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>